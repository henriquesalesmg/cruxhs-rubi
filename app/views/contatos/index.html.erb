<p id="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<h1>Pedidos</h1>
<% if administracao_signed_in? %>
Logged in as <strong><%= current_administracao.email %></strong>.
  <%= link_to 'Edit profile', edit_administracao_registration_path, :class => 'navbar-link' %> |
  <%= link_to "Logout", destroy_administracao_session_path, method: :delete, :class => 'navbar-link' %>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Tel</th>
      <th>Pedido</th>
      <th>Texto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contatos.each do |contato| %>
      <tr>
        <td><%= contato.nome %> _ </td>
        <td><%= contato.email %>__</td>
        <td><%= contato.telefone %>__</td>
        <td><%= contato.pedido %>__</td></br>
        <td><%= contato.mensagem %>__</td>
        <td><%= link_to 'Show', contato %>__</td>
        <td><%= link_to 'Edit', edit_contato_path(contato) %>__</td>
        <td><%= link_to 'Destroy', contato, method: :delete, data: { confirm: 'Are you sure?' } %>__</td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
  <%= link_to 'CruxHS', root_path, :class => 'submit_button' %>
<% end %>
