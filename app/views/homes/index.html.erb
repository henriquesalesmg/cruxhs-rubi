<p id="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<h1>Pedidos</h1>
<% if administracao_signed_in? %>
Logged in as <strong><%= current_administracao.email %></strong>.
  <%= link_to 'Edit profile', edit_administracao_registration_path, :class => 'navbar-link' %> |
  <%= link_to "Logout", destroy_administracao_session_path, method: :delete, :class => 'navbar-link' %>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Tel</th>
      <th>Cidade</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @homes.each do |home| %>
      <tr>
        <td><%= home.nome %> _ </td>
        <td><%= home.email %>__</td>
        <td><%= home.telefone %>__</td>
        <td><%= home.pedido %>__</td></br>
        <td><%= home.mensagem %>__</td>
        <td><%= link_to 'Show', home %>__</td>
        <td><%= link_to 'Edit', edit_home_path(home) %>__</td>
        <td><%= link_to 'Destroy', home, method: :delete, data: { confirm: 'Are you sure?' } %>__</td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
  <%= link_to 'CruxHS', root_path, :class => 'submit_button' %>
<% end %>
